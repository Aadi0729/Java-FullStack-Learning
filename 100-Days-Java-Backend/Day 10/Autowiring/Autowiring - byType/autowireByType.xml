<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="specification" class="car.example.autowire.type.Specification">
        <property name="make" value="Toyota"/>
        <property name="model" value="Corolla"/>
    </bean>

    <!--<bean id="specification1" class="car.example.autowire.type.Specification">
        <property name="make" value="Toyota1"/>
        <property name="model" value="Corolla1"/>
    </bean>-->

    <!--
    Whatever the dependencies this class needs will be autowired "by name"
    The name of the bean should be same as the property name within Car class
    [ Bean Name == Property Name ]
    -->
    <bean id="myCar" class="car.example.autowire.type.Car" autowire="byType"/>
</beans>
